<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/rankrecycler_background">

        <ImageView
            android:id="@+id/rankImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/emptybadge" />
        <TextView
            android:id="@+id/rankingUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francisco, Daniel Ivan"
            android:maxLines="1"
            android:layout_toEndOf="@id/rankImg"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/rankingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rankingUserName"
            android:layout_toEndOf="@id/rankImg"
            android:text="Score: "
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/rankingPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rankingUserName"
            android:layout_toEndOf="@id/Score"
            android:text="0"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rankingUserName"
            android:layout_toEndOf="@id/rankingPoints"
            android:text=" pts"
            android:textColor="@color/white" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>